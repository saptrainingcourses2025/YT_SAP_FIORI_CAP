<mvc:View controllerName="customviewbookshop.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
    xmlns="sap.m">
    <Page id="page">
        <!-- <Text text="Hello Tyson"></Text> -->

    <!-- Tool Header -->
	<tnt:ToolHeader id="shellLikeToolHeader" class="sapUiTinyMargin">
			<Button id="_IDGenButton" icon="sap-icon://menu2" type="Transparent" tooltip="Menu" press=".onCollapseExpandPress">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData" priority="NeverOverflow"/>
				</layoutData>
			</Button>
			<Image id="_IDGenImage" src="test-resources/sap/tnt/images/SAP_Logo.png" decorative="false" press="onLogoPressed" tooltip="SAP Logo" width="60px" height="30px">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData2" priority="NeverOverflow"/>
				</layoutData>
			</Image>
			<Title text="PrÐ¾duct Name" wrapping="false" id="productName">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData3" priority="Disappear"/>
				</layoutData>
			</Title>
			<Text text="Second title" wrapping="false" id="secondTitle">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData4" priority="Disappear"/>
				</layoutData>
			</Text>
			<ToolbarSpacer id="_IDGenToolbarSpacer" />
			<SearchField width="25rem" id="searchField">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData5" priority="Low" group="1"/>
				</layoutData>
			</SearchField>
			<Button visible="false" icon="sap-icon://search" type="Transparent" id="searchButton" tooltip="Search"/>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton" icon="sap-icon://da" type="Transparent" tooltip="Joule" text="Joule">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData6" group="2"/>
				</layoutData>
			</OverflowToolbarButton>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton1" icon="sap-icon://source-code" type="Transparent" tooltip="Action 1" text="Action 1">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData7" group="2"/>
				</layoutData>
			</OverflowToolbarButton>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton2" icon="sap-icon://card" type="Transparent" tooltip="Action 2" text="Action 2">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData8" group="2"/>
				</layoutData>
			</OverflowToolbarButton>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton3" icon="sap-icon://action-settings" type="Transparent" text="Settings"/>
			<Button id="_IDGenButton1" icon="sap-icon://bell" type="Transparent" tooltip="Notification">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData9" priority="NeverOverflow"/>
				</layoutData>
			</Button>
			<tnt:ToolHeaderUtilitySeparator id="_IDGenToolHeaderUtilitySeparator"/>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton4" icon="sap-icon://grid" type="Transparent" text="My Products" tooltip="My Products"/>
			<Avatar id="_IDGenAvatar" src="test-resources/sap/tnt/images/Woman_avatar_01.png" displaySize="XS" press=".onAvatarPressed" tooltip="Profile">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData10" priority="NeverOverflow"/>
				</layoutData>
			</Avatar>
		</tnt:ToolHeader>

    <!-- Side Navigation -->
    <HBox id="_IDGenHBox2">  
    <VBox id="_IDGenVBox">
	<tnt:SideNavigation id="sideNavigation" selectedKey="walked" expanded="true">
			<tnt:NavigationList id="_IDGenNavigationList">
				<tnt:NavigationListItem id="_IDGenNavigationListItem1" text="Home" icon="sap-icon://home" />
				<tnt:NavigationListGroup id="_IDGenNavigationListGroup" text="New">
					<tnt:NavigationListItem id="_IDGenNavigationListItem2" text="Add Book" icon="sap-icon://people-connected" press=".onAddBookPressed"/>
					<tnt:NavigationListItem id="_IDGenNavigationListItem3" text="Building" icon="sap-icon://building" >
						<tnt:NavigationListItem id="_IDGenNavigationListItem4" text="Office 01" />
						<tnt:NavigationListItem id="_IDGenNavigationListItem5" text="Office 02" />
					</tnt:NavigationListItem>
					<tnt:NavigationListItem id="_IDGenNavigationListItem6" text="Mileage" icon="sap-icon://mileage" >
						<tnt:NavigationListItem id="_IDGenNavigationListItem7" text="Driven" />
						<tnt:NavigationListItem text="Walked" id="walked" />
					</tnt:NavigationListItem>
				</tnt:NavigationListGroup>
				<tnt:NavigationListGroup id="_IDGenNavigationListGroup1" text="Recently used">
					<tnt:NavigationListItem id="_IDGenNavigationListItem8" text="View Books" icon="sap-icon://kpi-managing-my-area" press=".onViewDetailsBookPressed"/>
					<tnt:NavigationListItem id="_IDGenNavigationListItem9" text="Flight" icon="sap-icon://flight" />
					<tnt:NavigationListItem id="_IDGenNavigationListItem10" text="Map" icon="sap-icon://map-2" />
				</tnt:NavigationListGroup>
				<tnt:NavigationListGroup id="_IDGenNavigationListGroup2" text="Restricted" enabled="false">
					<tnt:NavigationListItem id="_IDGenNavigationListItem11" text="Running" icon="sap-icon://physical-activity" />
					<tnt:NavigationListItem id="_IDGenNavigationListItem12" text="Scissors" icon="sap-icon://scissors" />
				</tnt:NavigationListGroup>
				<tnt:NavigationListItem id="_IDGenNavigationListItem13" text="Transport" icon="sap-icon://passenger-train" />
			</tnt:NavigationList>
			<tnt:fixedItem>
				<tnt:NavigationList id="_IDGenNavigationList1">
					<tnt:NavigationListItem id="_IDGenNavigationListItem14" text="Bar Chart" icon="sap-icon://bar-chart" />
					<tnt:NavigationListItem id="_IDGenNavigationListItem15" selectable="false" href="https://sap.com" target="_blank" text="External Link" icon="sap-icon://attachment" />
					<tnt:NavigationListItem id="_IDGenNavigationListItem16" selectable="false" href="https://sap.com" target="_top" text="External Link _top" icon="sap-icon://attachment" />
					<tnt:NavigationListItem id="_IDGenNavigationListItem17" text="Compare" icon="sap-icon://compare" />
				</tnt:NavigationList>
			</tnt:fixedItem>
		</tnt:SideNavigation>
    </VBox>
    
    <VBox id="_IDGenVBox8">
    <!-- Panel 1 -->
    	<Panel id="Panel1" width="60rem" class="sapUiResponsiveMargin" accessibleRole="Region" visible="false">
		<headerToolbar>
			<OverflowToolbar id="_IDGenOverflowToolbar">
				<Title id="_IDGenTitle" text="Panel with picture"/>
			</OverflowToolbar>
		</headerToolbar>

    <Breadcrumbs id="IDGenBreadcrumbs" currentLocationText="Add New Item">
        <Link id="_IDGenLink" text="Master"></Link>        
    </Breadcrumbs>

    <HBox id="_IDGenHBox">
        <VBox id="_IDGenVBox1">
            <Label  id="_IDGenLabel1" text="Title"></Label>
            <Input placeholder="Enter your title" id="title"></Input>
        </VBox>
        <VBox id="_IDGenVBox2">
            <Label id="_IDGenLabel2" text="Author"></Label>
            <Input placeholder="Enter Author name" id="author"></Input>
        </VBox>
        <VBox id="_IDGenVBox3">
            <Label id="_IDGenLabel3" text="Price"></Label>
            <Input placeholder="Enter the Price" id="price"></Input>
        </VBox>         
    </HBox>

    <HBox id="_IDGenHBox1">
        <VBox id="_IDGenVBox4">
            <Label id="_IDGenLabel4" text="Stock"></Label>
            <Input placeholder="Enter the stocks" id="stock"></Input>
        </VBox>
        <VBox id="_IDGenVBox5">
            <Label id="_IDGenLabel5" text="Location"></Label>
            <Input placeholder="Enter the Location" id="location"></Input>
        </VBox>
        <VBox id="_IDGenVBox6">
            <Label id="_IDGenLabel6" text="Genre"></Label>
            <Input placeholder="Enter the genre" id="genre"></Input>
        </VBox>
    </HBox>
    <HBox id="_IDGenHBox7">
        <VBox id="_IDGenVBox7">
            <Button id="_IDGenBut" press="onsubmit" text="Submit"></Button>
        </VBox>
    </HBox> 
    </Panel>
    
    <!-- Panel 2 -->
    <Panel id="Panel2" width="60rem" headerText="Book Details" visible="false">
    <!-- Book Table -->
        <Table id="_IDGenTable1" items="{/Books}">
            <columns>
                <!-- <Column id="_IDGenColumn">
                    <Text id="_IDGenText13" text="ItemCode">
                    </Text>
                </Column> -->
                <Column id="_IDGenColumn1">
                    <Text id="_IDGenText" text="Title">
                    </Text>
                </Column>
                <Column id="_IDGenColumn2">
                    <Text id="_IDGenText1" text="Author">
                    </Text>
                </Column>
                <Column id="_IDGenColumn3">
                    <Text id="_IDGenText2" text="Price">
                    </Text>
                </Column>
                <Column id="_IDGenColumn4">
                    <Text id="_IDGenText3" text="Stock">
                    </Text>
                </Column>
                <Column id="_IDGenColumn5">
                    <Text id="_IDGenText4" text="Location">
                    </Text>
                </Column>
                <Column id="_IDGenColumn6">
                    <Text id="_IDGenText5" text="Genre">
                    </Text>
                </Column>
                <Column id="_IDGenColumnAct">
                    <Text id="_IDGenTextAct" text="Action">
                    </Text>
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1" >
                    <!-- <cells>
                        <Text id="_IDGenText12" text="{itemcode}"></Text>
                    </cells> -->
                    <cells>
                        <Text id="_IDGenText6" text="{title}"></Text>
                    </cells>
                    <cells>
                        <Text id="_IDGenText7" text="{author}"></Text>
                    </cells>
                    <cells>
                        <Text id="_IDGenText8" text="{price}"></Text>
                    </cells>
                    <cells>
                        <Text id="_IDGenText9" text="{stock}"></Text>
                    </cells>
                    <cells>
                        <Text id="_IDGenText10" text="{location}"></Text>
                    </cells>
                    <cells>
                        <Text id="_IDGenText11" text="{genre}"></Text>
                    </cells>
                    <cells>
                        <Button id="_IDGenBut1" text="..." press=".onActionPressed($event)"></Button>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>   
    </Panel>

    <!-- Panel 3 -->
    	<Panel id="Panel3" width="60rem" class="sapUiResponsiveMargin" accessibleRole="Region" visible="false">
		<headerToolbar>
			<OverflowToolbar id="_IDGenOverflowToolbar3">
				<Title id="_IDGenTitle3" text="Update Books"/>
			</OverflowToolbar>
		</headerToolbar>

    <Breadcrumbs id="IDGenBreadcrumbs3" currentLocationText="Add New Item">
        <Link id="_IDGenLink3" text="Master"></Link>        
    </Breadcrumbs>

    <HBox id="_IDGenHBox3">
        <VBox id="_IDGenVBox9" >
            <Label id="_IDGenLabel11" text="ItemCode"></Label>
            <Input placeholder="Enter Item Code" id="itemcodeupdate" editable="false"></Input>
        </VBox>    
        <VBox id="_IDGenVBox10" >
            <Label id="_IDGenLabel"  text="Title"></Label>
            <Input placeholder="Enter your title" id="titleupdate"></Input>
        </VBox>
        <VBox id="_IDGenVBox11" >
            <Label id="_IDGenLabelPan3" text="Author"></Label>
            <Input placeholder="Enter Author name" id="authorupdate"></Input>
        </VBox>
        <VBox id="_IDGenVBox12" >
            <Label id="_IDGenLabel7"  text="Price"></Label>
            <Input placeholder="Enter the Price" id="priceupdate"></Input>
        </VBox>         
    </HBox>

    <HBox id="_IDGenHBox4" >
        <VBox id="_IDGenVBox13" >
            <Label id="_IDGenLabel8" text="Stock"></Label>
            <Input placeholder="Enter the stocks" id="stockupdate"></Input>
        </VBox>
        <VBox id="_IDGenVBox14" >
            <Label id="_IDGenLabel9"  text="Location"></Label>
            <Input placeholder="Enter the Location" id="locationupdate"></Input>
        </VBox>
        <VBox id="_IDGenVBox15" >
            <Label id="_IDGenLabel10"  text="Genre"></Label>
            <Input placeholder="Enter the genre" id="genreupdate"></Input>
        </VBox>
    </HBox>
    <HBox id="_IDGenHBox5" >
        <VBox id="_IDGenVBox16" >
            <Button id="_IDGenButton5" press="updateItem" text="Update"></Button>
        </VBox>
    </HBox> 
    </Panel>

    </VBox>
    </HBox> 
    </Page>
</mvc:View>